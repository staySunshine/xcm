<view class="context"><block wx:if="{{!hasLogin}}"><view class="userinfo"><view class="btn-row" style="width:100%;margin:400rpx 0 0 0;"><button type="primary" data-event-opts="{{[['tap',[['bindLogin',['$event']]]]]}}" bindtap="__e">登录</button></view></view></block><block wx:else><view class="userinfo"><image class="userinfo-avatar" src="{{userInfo.avatarUrl}}"></image><view class="userinfo-nickname">{{"姓名："+userInfo.nickName}}</view><view style="margin:80rpx 0 0 0;"><view class="uni-form-item uni-column"><radio-group name="radio" data-event-opts="{{[['change',[['radioChange',['$event']]]]]}}" bindchange="__e"><label><radio value="0" checked="{{data.kind==0}}"></radio><text>支出</text></label><label style="margin-left:80rpx;"><radio value="1" checked="{{data.kind==1}}"></radio><text>收入</text></label></radio-group></view><view class="uni-form-item uni-column" style="margin-top:80rpx;">金额<input class="uni-input" type="digit" placeholder="$_$" data-event-opts="{{[['input',[['__set_model',['$0','payments','$event',[]],['data']],['paymentsInput',['$event']]]]]}}" value="{{data.payments}}" bindinput="__e"/></view><view class="uni-list-cell-db" style="margin-top:80rpx;">种类<picker range="{{array}}" value="{{data.type}}" data-event-opts="{{[['change',[['bindPickerChange',['$event']]]],['input',[['__set_model',['$0','type','$event',[]],['data']]]]]}}" bindchange="__e" bindinput="__e"><view class="uni-input">{{array[data.type]}}</view></picker></view><view style="margin-top:80rpx;"><view class="uni-form-item uni-column"><view class="title">内容</view><input class="uni-input" focus="{{true}}" placeholder="收支内容" data-event-opts="{{[['input',[['__set_model',['$0','context','$event',[]],['data']],['contextInput',['$event']]]]]}}" value="{{data.context}}" bindinput="__e"/></view></view></view><view class="btn-row" style="margin-top:80rpx;width:100%;"><button style="width:100%;" type="primary" data-event-opts="{{[['tap',[['bindAddBalance',['$event']]]]]}}" bindtap="__e">提交</button><button style="margin-top:10rpx;" type="default" data-event-opts="{{[['tap',[['bindLogout',['$event']]]]]}}" bindtap="__e">退出</button></view></view></block></view>